<div class="container">
  <%= render @post %>
   <% if @post.user.id == current_user.id %>
    <div class="btn-group">
  <%= link_to "Edit", edit_post_path(@post), class:"btn btn-success" %> &nbsp
  <%= button_to "Destroy this post", @post, method: :delete, class:"btn btn-danger" %> &nbsp
  <% end %>
      <%= link_to "Back to posts", posts_path, class:"btn btn-info"%>
    </div>
</div>
<br>
<div class="container">
  <%= render 'comments/form', 
    post: @post, 
    comment: @post.comments.build, 
    submit_label: "Reply" %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment', post: @post, comment: comment %>
  <% end %>
</div>


