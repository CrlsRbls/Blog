<div class= "container card">
<h1>Personal Homepage</h1>
<p>To create posts you must create a category first...</p>
   <div class= "card-actions mb-3">
      <%= link_to "About us", about_path, class:"btn btn-secondary" %>
      <%= link_to "Blog", posts_path, class:"btn btn-primary" %>
   </div>
</div>
<% if current_user %>
  <div class="container card mt-4">
      <h2><%= current_user.full_name %></h2>  
   <ul>
      <li><strong>Country:</strong> <%= current_user.address.country.titleize %></li>
      <li><strong>State:</strong> <%= current_user.address.state.titleize %></li>
      <li><strong>City:</strong> <%= current_user.address.city.titleize %></li>
      <li><strong>Zip Code:</strong> <%= current_user.address.zip %></li>
      <li><strong>Street:</strong> <%= current_user.address.street.titleize %></li>
   </ul>
   
  </div>
<% end %>
