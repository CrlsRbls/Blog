<div class= "container card">
<h1>Personal Homepage</h1>
<p>Check out the blog</p>
   <div class= "card-actions mb-3">
      <%= link_to "About us", about_path, class:"btn btn-secondary" %>
      <%= link_to "Blog", posts_path, class:"btn btn-primary" %>
      <%= link_to "Buy my merch", checkout_path(
         line_items: ['price_1LDx5fGm0Zq2kYa0br4AnAM2'],
         payment_mode: 'payment'
      ), class:"btn btn-info" %>
      <%= link_to "Subscribe", checkout_path(
         line_items: ['price_1LEPgjGm0Zq2kYa0nJHhae09'],
         payment_mode: 'subscription'
      ), class:"btn btn-success" %>
   </div>
</div>
<% if current_user %>
  <div class="container card mt-4">
      <h2><%= current_user.full_name %></h2>  
   <ul>
      <li><%= current_user.address.street.titleize %></li>
      <li><%= current_user.address.city.titleize %></li>
      <li><%= current_user.address.state.titleize %></li>
      <li><%= current_user.address.zip %></li>
      <li><%= current_user.address.country.titleize %></li>
   </ul>
   
  </div>
<% end %>
